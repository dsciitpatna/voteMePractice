<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2929A8"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voting System"
        android:textSize="30sp"
        android:textColor="#F44336"
        android:layout_marginTop="40dp"
        android:id="@+id/result_text_view"
        android:gravity="center"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="80dp">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_weight="1"
    android:text="Party A"

    android:textSize="30sp"
        android:layout_marginHorizontal="65dp"
        android:background="#F1DA06"
    android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:text="Party B"

        android:textSize="30dp"
        android:background="#F1DA06"
        android:textColor="#000"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="30sp"
            android:layout_marginLeft="90dp"
            android:id="@+id/party_vote_a"
            android:textColor="#F6F7F8"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="30dp"
            android:layout_marginHorizontal="95dp"
            android:id="@+id/party_vote_b"
            android:textColor="#F4F6F7"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:textColor="#000000"

        android:background="#FF5722"
        android:textSize="30dp"
        android:onClick="voteforA"
        android:text="Vote" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:onClick="voteforB"

        android:background="#FF5722"
        android:textSize="30dp"
        android:text="Vote" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:onClick="votefornota"
        android:text="NOTA"
        android:textSize="30sp"
        android:layout_marginTop="80dp"
        android:background="#37E707"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total A"
            android:textSize="30dp"
            android:layout_marginHorizontal="65dp"
            android:background="#F1DA06"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:text="Total B"
            android:textSize="30dp"
            android:background="#F1DA06"
            android:textColor="#000"/>
    </LinearLayout>
</LinearLayout>
